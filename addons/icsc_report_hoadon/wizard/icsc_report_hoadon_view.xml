    <record model="ir.ui.view" id="report_hoadongtgt_form_view">
            <field name="name">icsc.report.hoadongtgt.form</field>
            <field name="model">icsc.report.hoadongtgt</field>
            <field name="arch" type="xml">
                <form string="Hóa đơn" version="7.0"> 
                <group>
                        <separator string="Thông tin in hóa đơn" colspan="4"/>
                        <newline/>
                        <field name="hoa_don" readonly="1"/>
                    </group>
               
                   <footer>
                        <button name="print_hoadon" string="In VAT"
                            colspan="1" type="object" class="oe_highlight"  />
